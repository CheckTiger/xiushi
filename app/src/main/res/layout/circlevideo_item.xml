<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/id_circlevideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/id_circlevideo_head_ll"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/id_circlevideo_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/id_circlevideo_head_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                >
                <TextView
                    android:id="@+id/id_circlevideo_username"
                    android:layout_width="wrap_content"
                    android:maxWidth="180dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/id_circlevideo_sex"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/id_circlevideo_username"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/nearby_gender_female"
                    android:text="26"
                    android:gravity="right|center"/>
                <TextView
                    android:id="@+id/id_circlevideo_time"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="1小时前"
                    android:gravity="right|bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/circlevideo_action"
                    android:layout_toStartOf="@+id/circlevideo_action" />
                <ImageView
                    android:id="@+id/circlevideo_action"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/qiuyoucircle_action"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                >
                <TextView
                    android:id="@+id/id_circlevideo_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:maxHeight="200dp"/>
                <TextView
                    android:id="@+id/id_circlevideo_endtext"
                    android:layout_below="@+id/id_circlevideo_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qiuyoucircle_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/id_circlevideo_ll_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/id_circlevideo_endtext"

                    >
                    <com.sxh.olddriver.view.NEVideoView
                        android:id="@+id/circlevideo_videoView1"
                        android:layout_margin="5dp"
                        android:layout_height="300dp"
                        android:layout_width="match_parent">
                    </com.sxh.olddriver.view.NEVideoView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/id_circlevideo_address"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_height="25dp"
                    android:text="北京.房山区"/>
                <LinearLayout
                    android:id="@+id/circlevideo_like"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/circlevideo_comment"
                    android:layout_toStartOf="@+id/circlevideo_comment"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/qiuyoucircle_like"
                        />
                    <TextView
                        android:id="@+id/id_circlevideo_like_text"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="10000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/circlevideo_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/qiuyoucircle_comment"/>
                    <TextView
                        android:id="@+id/id_circlevideo_comment_text"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="10000"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/id_circlevideo"
        android:background="@color/gray"/>
</RelativeLayout>