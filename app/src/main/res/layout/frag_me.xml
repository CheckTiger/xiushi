<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_ab_qiushi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/personal_center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGray"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_me_login"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <ImageView

                android:id="@+id/me_iv_personal_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_add_qiuyou" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/me_iv_personal_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="6dp"
                    android:text="布说再见"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MeTextViewShowMessage"
                        android:text="总访客" />

                    <TextView
                        style="@style/MeTextViewShowMessage"
                        android:text="0" />

                    <TextView
                        style="@style/MeTextViewShowMessage"
                        android:text="今日" />

                    <TextView
                        style="@style/MeTextViewShowMessage"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <LinearLayout
               style="@style/MeLinearLayoutOneShow"
                >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/found_ic_nearby"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/near_by_people"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/MeLinearLayoutOneShow"
                >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/found_ic_group"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/near_by_people"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/MeLinearLayoutOneShow"
                >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/found_ic_store"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/near_by_people"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/MeLinearLayoutOneShow"
                >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/found_ic_chicken"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/near_by_people"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/MeLinearLayoutTwoShow"
            >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_manage_my_qiushi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理糗事和动态"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
           style="@style/MeLinearLayoutTwoShow"
            >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_theme_mode"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理糗事和动态"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/MeLinearLayoutTwoShow"
            >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_setting"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理糗事和动态"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>