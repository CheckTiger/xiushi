<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/id_nextdoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id_nextdoor_head_ll"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/id_nextdoor_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@id/id_nextdoor_head_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >
            <TextView
                android:id="@+id/id_nextdoor_username"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="匿名用户"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/id_nextdoor_sex"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/id_nextdoor_username"
                android:layout_alignParentBottom="true"
                android:background="@drawable/nearby_gender_female"
                android:text="26"
                android:gravity="right|center"/>
            <TextView
                android:id="@+id/id_nextdoor_time"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="1小时前"
                android:gravity="right|bottom"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/qiuyoucircle_action"
                android:layout_toStartOf="@+id/qiuyoucircle_action" />
            <ImageView
                android:id="@+id/qiuyoucircle_action"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/qiuyoucircle_action"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            >
            <TextView
                android:id="@+id/id_nextdoor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:maxHeight="200dp"/>
            <TextView
                android:id="@+id/id_nextdoor_endtext"
                android:layout_below="@+id/id_nextdoor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qiuyoucircle_text"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/id_nextdoor_ll_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/id_nextdoor_endtext"
                android:visibility="gone"
                >
                <LinearLayout
                    android:id="@+id/id_nextdoor_ll_img1"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_height="100dp">
                    <ImageView
                        android:id="@+id/id_nextdoor_ll_img_1"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="80dp" />
                    <ImageView
                        android:id="@+id/id_nextdoor_ll_img_2"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="80dp" />
                    <ImageView
                        android:id="@+id/id_nextdoor_ll_img_3"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="80dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id_nextdoor_ll_img2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="100dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/id_nextdoor_ll_img_4"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="80dp" />
                    <ImageView
                        android:id="@+id/id_nextdoor_ll_img_5"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="80dp" />
                    <ImageView
                        android:id="@+id/id_nextdoor_ll_img_6"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="80dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/id_nextdoor_address"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="25dp"
                android:text="北京.房山区"/>
            <LinearLayout
                android:id="@+id/qiuyoucircle_like"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/qiuyoucircle_comment"
                android:layout_toStartOf="@+id/qiuyoucircle_comment"
                android:layout_marginRight="10dp">
                <CheckBox
                    android:id="@+id/id_nextdoor_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button ="@null"
                    android:background="@drawable/qiuyoulike"
                    />

                <TextView
                    android:id="@+id/id_nextdoor_like_text"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="10000"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/qiuyoucircle_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/qiuyoucircle_comment"/>
                <TextView
                    android:id="@+id/id_nextdoor_comment_text"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="10000"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/id_nextdoor"
        android:background="@color/gray"/>
</RelativeLayout>